{
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.9.0",
  "description": "Collection of TextMate grammars and themes in JSON",
  "scripts": {
    "build": "pnpm -r build",
    "stub": "pnpm -r stub",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "bump": "esno scripts/bump.ts",
    "test": "vitest",
    "fetch": "esno scripts/fetch.ts && eslint . --fix",
    "fetch:force": "esno scripts/fetch.ts --force && eslint . --fix",
    "typecheck": "tsc --noEmit",
    "play": "nr -C playground dev",
    "play:build": "nr -C playground build",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.0.0",
    "@antfu/ni": "^0.23.0",
    "@antfu/utils": "^0.7.10",
    "@iconify-json/svg-spinners": "^1.2.0",
    "@shikijs/core": "^1.15.2",
    "@types/adm-zip": "^0.5.5",
    "@types/cson": "^7.20.3",
    "@types/js-yaml": "^4.0.9",
    "@types/json-stable-stringify": "^1.0.36",
    "@types/node": "^22.5.2",
    "@types/semver": "^7.5.8",
    "@vitest/expect": "^2.0.5",
    "adm-zip": "^0.5.16",
    "bumpp": "^9.5.2",
    "chai": "^5.1.1",
    "chalk": "^5.3.0",
    "cson": "^8.4.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.9.1",
    "esno": "^4.7.0",
    "fast-glob": "^3.3.2",
    "fast-plist": "^0.1.3",
    "js-yaml": "^4.1.0",
    "json-stable-stringify": "^1.1.1",
    "jsonc-parser": "^3.3.1",
    "lint-staged": "^15.2.10",
    "octokit": "^4.0.2",
    "ofetch": "^1.3.4",
    "oniguruma-to-js": "^0.2.5",
    "p-limit": "^6.1.0",
    "pnpm": "^9.9.0",
    "rimraf": "^6.0.1",
    "semver": "^7.6.3",
    "simple-git": "^3.26.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.4",
    "unbuild": "^2.0.0",
    "vite": "^5.4.2",
    "vitest": "^2.0.5",
    "vue-tsc": "^2.1.4",
    "yaml": "^2.5.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
